<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ResultActivity">

<!--  Top nav bar  -->
    <View
        android:id="@+id/top_title"
        android:layout_width="436dp"
        android:layout_height="65dp"
        android:background="@drawable/buttom_navi"
        android:forceDarkAllowed="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<!--  Activity Name  -->
    <TextView
        android:id="@+id/title_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_semibold_italic"
        android:text="@string/result"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--  Pattern/Mat Name  -->
    <TextView
        android:id="@+id/title_result_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nunito_bold_italic"
        android:shadowColor="#222222"
        android:shadowDx="1"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="@string/mat_name"
        android:textColor="#1C1C1C"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_title" />

    <!--  Pattern Image  -->
    <ImageView
        android:id="@+id/image_result_fragment"
        android:layout_width="400dp"
        android:layout_height="200dp"

        android:src="@drawable/img_button_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_result_fragment" />

    <!--  Scrollable view 1  (Description) -->
    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="407dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_result_fragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mat_info_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pattern_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold_italic"
                    android:text="@string/pattern_name"
                    android:textColor="#222222"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="348dp" />

                <TextView
                    android:id="@+id/pattern_space1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold_italic"
                    android:text=" : "
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="348dp" />


                <TextView
                    android:id="@+id/pattern_result_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold_italic"
                    android:text="@string/pattern_name"
                    android:textColor="#5F3708"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="348dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pattern_space3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold_italic"
                    android:text=" "
                    android:textColor="#5F3708"
                    android:textSize="8sp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="348dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pattern_origin_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold_italic"
                    android:text="@string/origin"
                    android:textColor="#292828"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="348dp" />

                <TextView
                    android:id="@+id/pattern_space2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold_italic"
                    android:text=" : "
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="348dp" />

                <TextView
                    android:id="@+id/origin_result_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold_italic"
                    android:text="@string/origin"
                    android:textColor="#5F3708"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="21dp"
                    tools:layout_editor_absoluteY="348dp" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


    <!--  Scrollable view 1 (Pattern Name & Pattern Origin)  -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/desc_result_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:background="#EAE7E7"
                android:fontFamily="@font/nunito_regular"
                android:text="@string/large_text"
                android:textColor="#373737"
                android:textSize="18dp" />
        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/abc_vector_test"
        tools:layout_editor_absoluteX="242dp" />


</androidx.constraintlayout.widget.ConstraintLayout>